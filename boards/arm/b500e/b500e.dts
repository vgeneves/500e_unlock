/dts-v1/;
#include <st/c0/stm32c031X6.dtsi>
#include <st/c0/stm32c031c(4-6)tx-pinctrl.dtsi>

/ {
	model = "STMicroelectronics STM32C031C6-NUCLEO board";
	compatible = "st,stm32c031c6-nucleo";

	chosen {
		zephyr,console = &usart1;
		zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

	app_pwm_ios_0 {
		compatible = "app-pwm-ios";
		pwms = <&pwmIN 1 0 PWM_POLARITY_NORMAL>, //IN
			<&pwmOUT 1 0 PWM_POLARITY_NORMAL>, //OUT
			<&pwmTEST 3 0 PWM_POLARITY_NORMAL>; //TEST
	};
};

&clk_hsi {
	status = "okay";
};

&rcc {
	clocks = <&clk_hsi>;
	clock-frequency = <DT_FREQ_M(48)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
};

&usart1 {
	status = "okay";
	pinctrl-0 = <&usart1_tx_pc14 &usart1_rx_pb7>;
	pinctrl-names = "default";
	current-speed = <115200>;
};

&iwdg {
	status = "disabled";
};

&tim1_ch1_pa0 {
	drive-open-drain;
};

&tim1_ch3_pa2 {
	drive-open-drain;
};

&timers1 {
	st,prescaler = <1024>;
	status = "okay";

	out: pwm { /* IN_MOTOR on schematics */
		pinctrl-0 = <&tim1_ch1_pa0>;
		pinctrl-names = "default";
		status = "okay";
	};
	in: pwm { /* OUT_CTRL on schematics */
		pinctrl-0 = <&tim1_ch2_pa1>;
		pinctrl-names = "default";
		status = "okay";
	};
	test: pwm { /* TEST */
		pinctrl-0 = <&tim1_ch3_pa2>;
		pinctrl-names = "default";
		status = "okay";
	};
};
